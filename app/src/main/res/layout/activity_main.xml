<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#07A0F4"
        android:elevation="16dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Number Conversion"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="FROM:"
                android:textColor="#FAF6F6"
                android:textSize="32sp" />

            <Spinner
                android:id="@+id/spinInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/white"
                android:gravity="start"
                android:paddingEnd="100dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textViewInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint="Enter Number"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="TO:"
                android:textColor="#FAF6F6"
                android:textSize="32sp" />

            <Spinner
                android:id="@+id/spinOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/white"

                android:dropDownWidth="match_parent"
                android:entries="@array/numberOptions"
                android:gravity="start"
                android:paddingEnd="100dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint="Result"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"


        android:background="#0288D1"
        android:columnCount="5"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button7"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonF"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="F"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#0288D1"
            android:drawableLeft="@drawable/clearall"
            android:paddingLeft="0dp" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonE"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="E"
            android:textSize="30sp" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonD"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="D"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:backgroundTint="#0288D1"
            android:drawableLeft="@drawable/backspace"

            android:paddingLeft="0dp" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button0"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="A"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="B"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#079FF3"
            android:text="C"
            android:textSize="30sp" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>